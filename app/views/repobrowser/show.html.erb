<head>
  <%= stylesheet_link_tag    "jqueryFileTree.css", plugin: 'redmine_repobrowser' %>

  <%= javascript_include_tag "jquery-1.8.3-ui-1.9.2-ujs-2.0.3.js", plugin: 'redmine_repobrowser' %>
  <%= javascript_include_tag "jquery.easing.js",                   plugin: 'redmine_repobrowser' %>
  <%= javascript_include_tag "jqueryFileTree.js",                  plugin: 'redmine_repobrowser' %>
</head>

<body>
<div id="fileTree" class="demo"></div>
</body>

<script type="text/javascript">
  $(document).ready( function() {
    $('#fileTree').fileTree({ root: '', script: "<%= url_for(controller: 'repobrowser', project_id: params[:project_id], action: 'content') %>" }, function(file) {
      file = '\"' + file + '\"'
      window.parent.$dialog.data('wikiToolbar').encloseSelection('export:'+file,'');
      window.parent.$dialog.dialog('close');
    });
  });
</script>
